<Window x:Class="P2PChat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2PChat"
        mc:Ignorable="d"
        Title="Chat" Height="238" Width="303">
    <Grid>
        <TextBox Name="txtConversation" Margin="5,5,5,40" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" IsReadOnly="True"/>
        <TextBox Name="txtMessage" Margin="5,5,50,5" Height="30" VerticalAlignment="Bottom" KeyDown="txtMessage_KeyDown"/>
        <Button Name="btnSend" Margin="5" Height="30" Width="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Send" Click="btnSend_Click"/>
    </Grid>
</Window>
